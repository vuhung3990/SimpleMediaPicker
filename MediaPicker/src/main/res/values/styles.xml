<resources>

  <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <!--toolbar-->
    <item name="colorPrimary">@color/primary256</item>
    <!--status bar-->
    <item name="colorPrimaryDark">@color/primaryDark256</item>
    <!--checked item, float button-->
    <item name="colorAccent">@color/accent256</item>
    <!--un check item-->
    <item name="android:textColorSecondary">@color/accent256</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="Widget.CameraView" parent="android:Widget">
    <item name="android:adjustViewBounds">false</item>
    <item name="facing">back</item>
    <item name="aspectRatio">4:3</item>
    <item name="autoFocus">true</item>
    <item name="flash">auto</item>
  </style>
</resources>
